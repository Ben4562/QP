@model QP_Management_System.Models.Editor

@{
    ViewBag.Title = "ReviewerReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Back", "Reviewer")

@using (Html.BeginForm("Reviewer","User"))
{
    @Html.AntiForgeryToken()

    <div class="nav-divider">
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-lg-3">
                <br />
                <textarea id="editor" name="editor"></textarea>
                <script type="text/javascript">
                    CKEDITOR.replace('editor', {
                    customConfig: 'viewer_config.js'
                    });
                </script>
            </div>

            <div class="col-lg-3" >
            </div>

            <div class="col-lg-3">
            </div>

            <div class="col-lg-3">
                <br />
                <ul class="nav nav-tabs">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                            Options <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class=""><a href="#dropdown1" data-toggle="tab" aria-expanded="false">Add comment</a></li>
                            <li class=""><a href="#dropdown2" data-toggle="tab" aria-expanded="false">Option 2</a></li>
                            <li class=""><a href="#dropdown3" data-toggle="tab" aria-expanded="false">Option 3</a></li>
                            @*<li class="divider"></li>
                            <li class=""><a href="#dropdown2" data-toggle="tab" aria-expanded="false">Advanced</a></li>*@
                        </ul>
                    </li>
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane fade" id="dropdown1">
                        <br /><br />
                        @Html.TextArea("Comment", new { @placeholder = "Enter comment here", @style = "height:300px;width:300px;" })
                    </div>
                </div>
            </div>

        </div>
        <div class="row text-center" style="font-size:large" >
            <br />

           <input type="submit" name="Submit" />
        </div>
    </div>

}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
