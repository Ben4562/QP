<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-yeti.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("QP Management System", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        if (Session["Role"] == null)
                        {
                            if (ViewBag.Title != "Login")
                            {
                                <li>
                                    @Html.ActionLink("Login", "Login", "User")
                                </li>
                            }
                            else
                            {
                                <li>

                                </li>
                            }
                        }
                        else if (Session["Role"].ToString().ToLower() == "qp anchor")
                        {
                            <li>
                                @Html.ActionLink("Create", "CreateQP", "User")
                            </li>
                            <li>
                                @Html.ActionLink("Download", "CreateQP", "User")
                            </li>
                            <li>
                                @Html.ActionLink("Select", "CreateQP", "User")
                            </li>
                            <li>
                                @Html.ActionLink("Logout", "LogOut", "User")
                            </li>
                        }
                        else if (Session["Role"].ToString().ToLower() == "author")
                        {
                            <li>
                                @Html.ActionLink("Logout", "LogOut", "User")
                            </li>
                        }
                        else if (Session["Role"].ToString().ToLower() == "reviewer")
                        {
                            <li>
                                @Html.ActionLink("Logout", "LogOut", "User")
                            </li>
                        }
                        else if (Session["Role"].ToString().ToLower() == "quality anchor")
                        {
                            <li>
                                @Html.ActionLink("Logout", "LogOut", "User")
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer>
            @*<p>&copy; @DateTime.Now.Year - </p>*@
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>